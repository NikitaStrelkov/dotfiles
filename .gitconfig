[user]
    	email = nikita.strelkov@gmail.com
    	name = Nikita Strelkov
[core]
    	excludesfile = /home/nikita.strelkov/.gitignore
	editor = nvim
[color "branch"]
    	current = yellow reverse
    	local = yellow
    	remote = green
[color "diff"]
    	meta = yellow bold
    	frag = magenta bold
    	old = red bold
    	new = green bold
[color "status"]
    	added = yellow
    	changed = green
    	untracked = cyan
    	autocrlf = input
[alias] 
	create-pull-request = !sh -c 'stash pull-request $0 $@'
	glog = log --graph --abbrev-commit --decorate --all \n--format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\"
	g = grep --extended-regexp --break --heading --line-number
[init]

[grep]
  	break = true
  	heading = true
  	lineNumber = true
[push]
	default = simple
